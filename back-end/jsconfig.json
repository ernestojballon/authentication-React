{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "es2020",
        "module": "es2015",
        "baseUrl": ".",
        "paths": {
            "#Services/*": ["src/services/*"],
            "#Config/*": ["src/config/*"],
            "#Utils/*": ["src/utils/*"],
            "#Middlewares/*": ["src/middlewares/*"]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        "build",
        ".vscode",
        ".nuxt",
        "coverage",
        "jspm_packages",
        "tmp",
        "temp",
        "bower_components",
        ".npm",
        ".yarn"
    ],
    "typeAcquisition": {
        "enable": true
    }
}
